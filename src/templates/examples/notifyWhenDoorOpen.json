{
  "name": "Notify Me When Door Left Open 2",
  "actions": [
    {
      "if": {
        "equals": {
          "left": {
            "device": {
              "devices": [
                "{{ deviceId }}"
              ],
              "component": "main",
              "capability": "contactSensor",
              "attribute": "contact"
            }
          },
          "right": {
            "string": "open"
          }
        },
        "then": [
          {
            "sleep": {
              "duration": {
                "value": {
                  "integer": 30
                },
                "unit": "Second"
              }
            }
          },
          {
            "if": {
              "equals": {
                "left": {
                  "device": {
                    "devices": [
                      "{{ deviceId }}"
                    ],
                    "component": "main",
                    "capability": "contactSensor",
                    "attribute": "contact"
                  }
                },
                "right": {
                  "string": "open"
                }
              },
              "then": [
                {
                  "command": {
                    "devices": [
                      "{{ deviceId }}"
                    ],
                    "commands": [
                      {
                        "component": "main",
                        "capability": "switch",
                        "command": "on",
                        "arguments": []
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}