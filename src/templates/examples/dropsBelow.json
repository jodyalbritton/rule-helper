{
	"name": "If dimmer drops below 25%, turn off other devices",
	"actions": [
		{
			"if": {
				"dropsBelow": {
					"left": {
						"device": {
							"devices": [
								"{{ deviceId }}"
							],
							"component": "main",
							"capability": "switchLevel",
							"attribute": "level"
						}
					},
					"right": {
						"integer": 25
					}
				},
				"then": [
					{
						"command": {
							"devices": [
								"{{ deviceId }}"
							],
							"commands": [
								{
									"component": "main",
									"capability": "switch",
									"command": "off"
								}
							]
						}
					}
				],
				"else": []
			}
		}
	]
}