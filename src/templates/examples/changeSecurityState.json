{
    "name": "If SHM changes to X, turn off device.",
    "actions": [
      {
        "if": {
          "equals": {
            "left": {
              "location": {
                "attribute": "Security"
              }
            },
            "right": {
              "string": "{{ armState }}"
            }
          },
          "then": [
            {
              "command": {
                "devices": [
                  "{{ deviceId }}"
                ],
                "commands": [
                  {
                    "component": "main",
                    "capability": "switch",
                    "command": "off"
                  }
                ]
              }
            }
          ],
          "else": []
        }
      }
    ]
  }