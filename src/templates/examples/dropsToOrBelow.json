{
	"name": "If dimmer is 25% or lower, change location mode",
	"actions": [
		{
			"if": {
				"dropsToOrBelow": {
					"left": {
						"device": {
							"devices": [
								"{{ deviceId }}"
							],
							"component": "main",
							"capability": "switchLevel",
							"attribute": "level"
						}
					},
					"right": {
						"integer": 25
					}
				},
				"then": [
					{
						"location": {
							"mode": "{{ locationModeId }}"
						}
					}
				],
				"else": []
			}
		}
	]
}