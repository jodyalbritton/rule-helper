{
	"name": "If dimmer Rises Above 75% then change its color",
	"actions": [
		{
			"if": {
				"risesToOrAbove": {
					"left": {
						"device": {
							"devices": [
								"{{ deviceId }}"
							],
							"component": "main",
							"capability": "switchLevel",
							"attribute": "level"
						}
					},
					"right": {
						"integer": 75
					}
				},
				"then": [
					{
						"command": {
							"devices": [
								"{{ deviceId }}"
							],
							"commands": [
								{
									"component": "main",
									"capability": "colorControl",
									"command": "setColor",
									"arguments": [
										{
											"map": {
												"saturation": {
													"integer": 40
												},
												"level": {
													"integer": 25
												},
												"hue": {
													"integer": 20
												}
											}
										}
									]
								}
							]
						}
					}
				],
				"else": []
			}
		}
	]
}